import numpy as np
import tkinter as tk

def swap_rows(A, B):
    n = A.shape[0]
    for i in range(n):
        if A[i][i] == 0:
            for j in range(i+1, n):
                if A[j][i] != 0:
                    A[[i, j]] = A[[j, i]]
                    B[[i, j]] = B[[j, i]]
                    break
    return A, B

def gauss_seidel(A, B, tol=1e-6, max_iter=100):
    A, B = swap_rows(A, B)
    n = A.shape[0]
    x = np.zeros(n)

    for k in range(max_iter):
        x_old = x.copy()

        for i in range(n):
            s = 0
            for j in range(n):
                if j != i:
                    s += A[i][j] * x[j]

            x[i] = (B[i] - s) / A[i][i]

        if np.linalg.norm(x - x_old) < tol:
            return x

    return x

def solve():
    A = np.array([[4, -1, 0],
                  [-1, 4, -1],
                  [0, -1, 3]], dtype=float)

    B = np.array([15, 10, 10], dtype=float)

    solution = gauss_seidel(A, B)
    result_label.config(text="Solution: " + str(solution))

root = tk.Tk()
root.title("Gauss-Seidel Method")

button = tk.Button(root, text="Solve System", command=solve)
button.pack(pady=10)

result_label = tk.Label(root, text="Click button to solve")
result_label.pack(pady=10)

root.mainloop()


